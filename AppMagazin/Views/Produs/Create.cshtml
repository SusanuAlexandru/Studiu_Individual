@model AppMagazin.Models.Produs

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-primary">Create New Product</h1>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <h4 class="card-title text-center text-success">Product Details</h4>
            <hr />

            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- URL Image Section -->
                <div class="form-group mb-4">
                    <label asp-for="ImagineURL" class="form-label fw-bold">Product Image URL</label>
                    <input asp-for="ImagineURL" class="form-control" placeholder="Enter image URL" />
                    <span asp-validation-for="ImagineURL" class="text-danger"></span>
                </div>

                <!-- Name Section -->
                <div class="mb-4">
                    <label asp-for="Nume" class="form-label fw-bold">Product Name</label>
                    <input asp-for="Nume" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Nume" class="text-danger"></span>
                </div>

                <!-- Description Section -->
                <div class="mb-4">
                    <label asp-for="Descriere" class="form-label fw-bold">Product Description</label>
                    <textarea asp-for="Descriere" class="form-control" rows="4" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Descriere" class="text-danger"></span>
                </div>

                <!-- Price Section -->
                <div class="mb-4">
                    <label asp-for="Pret" class="form-label fw-bold">Price (Lei)</label>
                    <input asp-for="Pret" class="form-control" type="number" step="0.01" placeholder="Enter product price" />
                    <span asp-validation-for="Pret" class="text-danger"></span>
                </div>

                <!-- Stock Section -->
                <div class="mb-4">
                    <label asp-for="Stoc" class="form-label fw-bold">Stock Quantity</label>
                    <input asp-for="Stoc" class="form-control" type="number" placeholder="Enter stock quantity" />
                    <span asp-validation-for="Stoc" class="text-danger"></span>
                </div>
                <div class="text-center">
				    <button type="submit" class="btn btn-success">Create Product</button>
                </div>
            </form>
        </div>
	</div>
    <!-- Submit Button -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-primary">Back to Product</a>
	</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
